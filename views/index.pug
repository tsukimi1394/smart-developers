					a(href="#", class="login icon icon--avatar icon--contact")
						span(class="contact__link") Войти
					a(href="#", class="basket icon icon--shopping-cart icon--contact")
						span(class="contact__link") Корзина
				form(action="#", class="search")
					input(type="search", placeholder="Поиск...", class="search__input")
					button(type="submit", class="search-icon")
			nav(class="main-menu")
				a(href="#", class="main-menu__item") Женщинам
